{
  "title": "Fn to Hyper & fn key to right_option",
  "rules": [
    {
      "description": "Remap fn key to hyper (shift + control + command + option) and fn to right_option",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "fn",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": ["right_command", "right_control", "right_option"]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "right_option",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "fn"
            }
          ]
        }
      ]
    }
  ]
}
